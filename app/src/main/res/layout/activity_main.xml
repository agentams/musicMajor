<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#202020">
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">



        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Music Junction"
            android:textSize="30sp"
            android:textColor="#00FF7F"
            android:gravity="center_horizontal"
            android:background="@drawable/bggreen"
            android:padding="10dp"
            android:layout_margin="10dp"/>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/bt1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/musiclocal"
        android:scaleType="fitXY"
        android:background="@drawable/bgblue"
        android:padding="5dp" />
        <TextView
            android:id="@+id/lt1"
            android:layout_below="@id/bt1"
            android:layout_height="50dp"
            android:layout_width="180dp"
            android:text="Local Files Player"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bgblue"
            android:padding="5dp"
            android:textColor="#00BFFF"
            android:layout_marginTop="5dp" />
        <ImageButton
            android:id="@+id/bt7"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/streammusic"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/bt1"
            android:background="@drawable/bgpink"
            android:padding="5dp"/>
        <TextView
            android:layout_toRightOf="@+id/lt1"
            android:layout_below="@id/bt7"
            android:layout_height="50dp"
            android:layout_width="180dp"
            android:text="Basic Online Player"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bgpink"
            android:padding="5dp"
            android:textColor="#FF4081"
            android:layout_marginTop="5dp" />
    </RelativeLayout>
    </TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Web Player Section"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:background="@drawable/bgwhite"
        android:textColor="#FFFFFF" />
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/bt3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ytmusic"
                android:scaleType="fitXY"
                android:background="@drawable/bgred"
                android:padding="5dp"/>
            <ImageButton
                android:id="@+id/bt4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/spotify"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/bt3"
                android:background="@drawable/bggreen"
                android:padding="5dp"
                />
        </RelativeLayout>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/bt5"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/saavan"
                android:scaleType="fitXY"
                android:background="@drawable/bgltgreen"
                android:padding="5dp"
                />
            <ImageButton
                android:id="@+id/bt6"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/gaana"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/bt5"
                android:background="@drawable/bgor"
                android:padding="5dp"
                />
        </RelativeLayout>
    </TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extras"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:background="@drawable/bggreen"
        android:textColor="#00FF7F"

        />
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/bt9"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/eq"
                android:scaleType="fitXY"
                android:background="@drawable/bg_player_white"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/lt2"
                android:layout_below="@id/bt9"
                android:layout_height="50dp"
                android:layout_width="180dp"
                android:text="Equalizer"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/bgwhite"
                android:textColor="#ffffff"
                />
            <ImageButton
                android:id="@+id/bt10"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/info"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/bt9"
                android:background="@drawable/bgyellow"
                android:padding="5dp"
                />
            <TextView
                android:layout_toRightOf="@+id/lt2"
                android:layout_below="@id/bt10"
                android:layout_height="50dp"
                android:layout_width="180dp"
                android:text="About"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/bgyellow"
                android:layout_marginStart="10dp"
                android:textColor="#FBC02D"/>
        </RelativeLayout>
    </TableRow>
</TableLayout>
</ScrollView>