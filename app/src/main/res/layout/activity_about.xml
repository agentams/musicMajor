<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:background="@drawable/bggreen"
    android:layout_margin="2dp"
    android:orientation="vertical">
   <TextView

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="About"
       android:textSize="30sp"
       android:textColor="#00FF7F"
       android:padding="10dp"
       android:layout_margin="20dp"
       android:gravity="center"
       android:textStyle="bold"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:textStyle="italic"
        android:text="This App was devloped as a Final year Project for MCA.This is a basic Music Player Application.It can play all the Audio Files stored in Device Storage(i.e. .mp3,.m4a,.wav). This App also include a basic online hardcoded Audio player which stream Mp3 file from FireBase. This App also include Many Popular Web Players(i.e. JioSaavn, YoutubeMusic, Spotify, Gaana.com). The App has buit-in Support for Equalizers\n\nSpecial Thanks to Dharamjeet(@PunkBoy) and Nishant Rana for their inputs in designing layout and testing the application.\n\nApp was devloped by Akash Sharma(@Agentams)"

        android:gravity="fill_vertical"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Social Links:"
    android:textSize="19sp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:textStyle="italic|bold"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/teleb"
            android:layout_width="60dp"
            android:layout_height="60dp"
          android:layout_margin="20dp"
            android:src="@drawable/tele"
            android:scaleType="fitXY"
            android:background="@null"

            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/gitb"
         android:layout_margin="20dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/git"
            />
        <ImageButton
            android:id="@+id/inb"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:layout_margin="20dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/in"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refrences:-"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:textStyle="italic|bold"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textStyle="italic"
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:text="1. StackOverFlow \n2. YouTube\n3. GeekForGeeks\n4. GitHub"/>


</LinearLayout>